<h1>New Support Request</h1>

<%= form_for(@request, html: {class: 'form-horizontal'}) do |r| %>

  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div>
  <%= r.label :name %>
  <%= r.text_field :name %>
</div>
<div>
  <%= r.label :email %>
   <%= r.text_field :email %>
</div>
<div>
     <%= r.radio_button :department, 'sales' %>
     <%= r.label :department, 'Sales', :value => 'sales' %>
     <%= r.radio_button :department, 'technical' %>
     <%= r.label :department, 'Technical', :value => 'sales' %>
     <%= r.radio_button :department, 'marketing' %>
     <%= r.label :department, 'Marketing', :value => 'marketing' %>
</div>
<div>
  <%= r.label :message %>
   <%= r.text_area :message %>
</div>

<%= r.submit %>
<% end %>
